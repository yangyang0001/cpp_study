# include <iostream>
# include <climits>
# include <string>
# include <cstring>

using namespace std;

int main() {
    cout.setf(ios_base::fixed, ios_base::floatfield);

    int x = 100;
    cout << "x > 3 is :" << (x > 3) << endl;
    cout << "x < 3 is :" << (x < 3) << endl;

    cout.setf(ios_base::boolalpha); // 这个会将 关系表达式转换为 true / false 来展示!
    cout << "x > 3 is :" << (x > 3) << endl;
    cout << "x < 3 is :" << (x < 3) << endl;

    return 0;
}




